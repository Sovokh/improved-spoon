#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    // Define a file pointer
    FILE *file;

    // Open a file for writing (or create if it doesn't exist)
    file = fopen("reminders.txt", "w");

    if (file == NULL) {
        printf("Unable to open the file.\n");
        return 1;
    }

    // Prompt the user to enter reminders
    printf("Enter your reminders/to-do list for tomorrow (press Enter to finish):\n");
    char reminder[1000];
    while (1) {
        fgets(reminder, sizeof(reminder), stdin);

        if (strcmp(reminder, "\n") == 0) {
            break;
        }

        fprintf(file, "%s", reminder);
    }

    // Close the file
    fclose(file);

    printf("Reminders saved successfully.\n");
    return 0;
}
